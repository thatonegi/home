<advancedsettings>
     <loglevel hide="false">1</loglevel>
     <playcountminimumpercent>75</playcountminimumpercent>
     <skiploopfilter>8</skiploopfilter>
     <nodvdrom>true</nodvdrom>
     <songinfoduration>120</songinfoduration>
     <fanartres>720</fanartres>
     <splash>false</splash>
     <imageres>720</imageres>
     <guires>540</guires>
     <imagescalingalgorithm>fast_bilinear</imagescalingalgorithm>
     <showexitbutton>true</showexitbutton>

     <videodatabase>
     	     <type>mysql</type>
     	     <host>127.0.0.1</host>
    	     <port>3306</port>
   	     <user>kodi</user>
     	     <pass>letmein</pass>
     </videodatabase>
     
     <musicdatabase>
	     <type>mysql</type>
	     <host>127.0.0.1</host>
	     <port>3306</port>
	     <user>kodi</user>
	     <pass>letmein</pass>
     </musicdatabase>

     <!-- Streaming Optimization -->
     <network>
       <curlclienttimeout>20</curlclienttimeout>
       <curllowspeedtime>15</curllowspeedtime>
       <curlretries>2</curlretries>
     </network> 

     <cache>
	     <!-- <memorysize>104857600</memorysize> -->
	     <buffermode>2</buffermode>		<!-- Buffer only true internet filesystems -->
	     <memorysize>209715200</memorysize>
	     <readfactor>20</readfactor>
     </cache>

     <samba>
	     <statfiles>false</statfiles>
	     <clienttimeout>20</clienttimeout>
     </samba>
     
     <musiclibrary>
	     <artistseperators>
		     <seperator>:</seperator>
		     <seperator> feat. </seperator>
		     <seperator> ft. </seperator>
	     </artistseperators>
	     <dateadded>1</dateadded>
     </musiclibrary>

     <!-- Video Library Tweaks -->
     <videolibrary>
	     <importresumepoint>true</importresumepoint>
      	     <cleanonupdate>true</cleanonupdate>
      	     <importwatchedstate>true</importwatchedstate>
     </videolibrary>

     <videoscanner>
       <ignoreerrors>true</ignoreerrors>
     </videoscanner>

     <!-- Playback Tweaks -->
     <video>
       <subsdelayrange>240</subsdelayrange>
       <busydialogdelayms>750</busydialogdelayms>
     </video>
</advancedsettings>
